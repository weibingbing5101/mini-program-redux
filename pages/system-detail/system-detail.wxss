/* pages/system-detail/system-detail.wxss */

.page-system-detail {
    position: relative;
    width: 100%;
    min-height: 100%;

}

.page-system-detail .bg{
    position: absolute;
    width: 100%;
    z-index: -1;
}

.page-system-detail .total{
    position: relative;
}

.page-system-detail .total-text{
     position: absolute;
     top:56rpx;
     right: 410rpx;
     font-size: 72rpx;
     font-weight: bold;
     color: #fedd06;

}

.page-system-detail .right-btn {
    position: fixed;
    top: 32rpx;
    right: 0;
}
.page-system-detail .right-btn .btn{
    display: block;
    margin-top: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 12rpx;
    text-align: center;
    font-size: 20rpx;
    color: #ffffff;
    background-color: rgba(0, 0, 0, 0.75);
    border-bottom-left-radius: 30rpx;
    border-top-left-radius: 30rpx;
}

.page-system-detail .tip-center {
    padding-top: 570rpx;
    color: #ffffff;
    text-align: center;
    font-size: 28rpx;
}

.page-system-detail .tip-center-em{
     color: #fedd06;
     font-size: 32rpx;
}
.page-system-detail .btn-group {
    padding: 24rpx 100rpx;
}
.page-system-detail .btn-group .btn {
    display: inline-block;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-radius: 12rpx;
    font-size: 34rpx;
    color: #b23218;
    font-weight: bold;
}
.page-system-detail .btn-group .btn-share {
    background-color: #ead29e;
}

.page-system-detail .btn-group .btn-create{
     margin-top: 32rpx;
     background-color: #f9d22d;
}

.page-system-detail .qrcode {
    width: 180rpx;
    height: 180rpx;
    margin: 0 auto;
}
.page-system-detail .qrcode .img{
    width: 100%;
    height: 100%;
}
.page-system-detail .tip-footer{
    padding-top: 16rpx;
    color: #f9d22d;
    font-size: 24rpx;
    text-align: center;
}