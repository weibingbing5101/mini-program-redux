.reg-phone-module {
    padding: 4% 8%;
    /* height: 100%; */
    width: 100%;
    background-color: #c12f18;
    padding-top: 30rpx;
    box-sizing: border-box;
}











/* // .title-desc {} */


/* // 表单 手机号  验证码  领取 */

.title-desc .logo {
    margin: 0 auto;
    width: 191rpx;
    height: 76rpx;
    background-size: cover;
    background-position: top center;
}

.title-desc .kcash-logo {
    background-image: url('../../images/logo.png');
}

.title-desc .abtc-logo {
    width: 246rpx;
    background-image: url('../../images/abtc-bg.png');
}

.title-desc .abao-logo {
    width: 176rpx;
    background-image: url('../../images/abao-bg.png');
}

.title-desc .act-logo {
    width: 206rpx;
    background-image: url('../../images/act-bg.png');
}

.title-desc .gcc-logo {
    width: 292rpx;
    height: 90rpx;
    background-image: url('../../images/gym-bg.png');
}

.title-desc .text {
    display: block;
    height: auto;
    line-height: auto;
    margin-top: 32rpx;
}

.title-desc .text image {
    display: block;
    max-width: 560rpx;
    max-height: 170rpx;
    margin: 0 auto;
}


.title-desc .background-label {
    /* // overflow: hidden; */
    margin: 0 auto;
    margin-top: 16rpx;
    position: relative;
    height: 140rpx;
}


.title-desc .background-label view {
    position: absolute;
    top: 24rpx;
    color: #bf3415;
    z-index: 99;
    font-size: 30rpx;
    left: 55rpx;
    font-weight: 600;
}


.title-desc .background-label image {
    max-width: 600rpx;
    width: 90%;
    position: absolute;
    bottom: -16rpx;
    left: 52%;
    transform: translateX(-50%);
}










