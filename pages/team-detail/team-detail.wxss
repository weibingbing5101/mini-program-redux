.content-form .input-box input {
    height: 90rpx;
    padding: 16rpx;
    width: 100%;
    /* line-height: 90rpx; */
    background-color: #ffffff;
    font-size: 26rpx;
}







/* // 定位用的  图形码  获取验证码 */

.content-form .input-box-position {
    position: relative;
}

.content-form .input-box-position .img-code {
    width: 160rpx;
    height: 60rpx;
    position: absolute;
    top: 16rpx;
    right: 16rpx;
    border-radius: 4rpx;
    border: 1px solid #e0dcdd;
}

.content-form .input-box-position .get-code {
    width: 180rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #c12f18;
    background-color: #ecd6ad;
    position: absolute;
    top: 0px;
    right: 0px;
    display: inline-block;
}

.content-form .input-box-position .get-code-disable {
    background-color: #ccc;
    color: #fff;
}






/* // 领取红包  提交按钮 */

.content-form .submit-btn {
    margin-top: 48rpx;
    border-radius: 8rpx;
    background-color: #f9d22d;
    color: #c12f18;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    font-size: 34rpx;
}




.rule-box {
    margin-top: 80rpx;
    color: #ecd6ad;
}

.dl {
    padding-top: 48rpx;
    font-size: 28rpx;
}

.dt {
    line-height: 60rpx;
}

.dd {
    line-height: 40rpx;
    word-wrap: break-word
}